<NumPad>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 10
        FlatLabel:
            size_hint_y: .2
            text: root.display_text + root.units if root.units != None else root.display_text
            color: (0., 0., 0., 1.)
            text_size: self.size
            #theme: ('blue', 'variant_2')
            halign: 'right'
            font_size: self.height * .75
        GridLayout:
            cols:3
            size_hint_y: .8
            padding: 5
            spacing: 5
            FlatButton:
                text: "7"
                size_hint: (.33,.25)
                on_release: root.button_callback("7")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "8"
                size_hint: (.33,.25)
                on_release: root.button_callback("8")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "9"
                size_hint: (.33,.25)
                on_release: root.button_callback("9")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "4"
                size_hint: (.33,.25)
                on_release: root.button_callback("4")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "5"
                size_hint: (.33,.25)
                on_release: root.button_callback("5")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "6"
                size_hint: (.33,.25)
                on_release: root.button_callback("6")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "1"
                size_hint: (.33,.25)
                on_release: root.button_callback("1")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "2"
                size_hint: (.33,.25)
                on_release: root.button_callback("2")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "3"
                size_hint: (.33,.25)
                on_release: root.button_callback("3")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "del"
                size_hint: (.33,.25)
                on_release: root.button_callback("del")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
                text: "0"
                size_hint: (.33,.25)
                on_release: root.button_callback("0")
                font_size: self.height * .4
                #theme: ('blue', 'numpad')
            FlatButton:
