<ItemCategoryScreen>:
    BoxLayout:
        id: layout
        size_hint: (0.8, .8)
        pos_hint: {'x': .1, 'y': .15}
        orientation: 'vertical'
        padding: 10
        spacing: 10
    Widget:
        size_hint: (1.0, .1)
        canvas.before:
            Color:
                rgba: app.get_color(['Cyan', '800'])[0:3] + [.5]
            Rectangle:
                size: self.size
                pos: self.pos
    FlatButton:
        size_hint: (.15, .08)
        text: 'Back'
        font_ramp_tuple: ('itemcats_back', '1')
        pos_hint: {'x' : .01, 'y': .01}
        theme: ('aqua', 'variant_2')
        valign: 'middle'
        halign: 'center'
        text_size: self.size
        on_release: app.change_screen('home')
    FlatButton:
        size_hint: (.2, .08)
        text: 'Load'
        font_ramp_tuple: ('itemcats_load', '1')
        pos_hint: {'x': .21, 'y': .01}
        theme: ('aqua', 'variant_2')
        valign: 'middle'
        halign: 'center'
        text_size: self.size
        on_release: app.open_load()
